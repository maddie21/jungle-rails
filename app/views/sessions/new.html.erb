<h1>Login</h1>

<%= form_tag '/login' do %>

    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <%= text_field_tag :email %>
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <%= password_field_tag :password %>
        </div>
    </div>

    <%= submit_tag "Submit" %>

<% end %>